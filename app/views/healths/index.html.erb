<p id="notice"><%= notice %></p>

<h1>Healths</h1>

<%= line_chart Health.pluck(:date, :body_weight) %>

<table>
  <thead>
    <tr>
      <th>日付</th>
      <th>体重</th>
      <th>体調</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @healths.each do |health| %>
  <tbody class="box">
      <tr class="space">
        <td class="p400"><%= health.date %></td>
        <td class="p400"><%= health.body_weight %></td>
        <td class="p400"><%= health.condition %></td>
        <td><%= link_to '詳細', health ,class: "btn btn-outline-warning btn-sm"%></td>
        <td><%= link_to '編集', edit_health_path(health) ,class: "btn btn-outline-success btn-sm"%></td>
        <td><%= link_to '削除', health, method: :delete, data: { confirm: '本当に削除しますか？' } ,class: "btn btn-outline-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_health_path ,class: "btn btn-outline-primary"%>
