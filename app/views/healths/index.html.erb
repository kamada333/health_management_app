<p id="notice"><%= notice %></p>

<h1>Healths</h1>

<%= line_chart Health.pluck(:date, :body_weight) %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Body weight</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @healths.each do |health| %>
      <tr>
        <td><%= health.date %></td>
        <td><%= health.body_weight %></td>
        <td><%= health.condition %></td>
        <td><%= link_to 'Show', health %></td>
        <td><%= link_to 'Edit', edit_health_path(health) %></td>
        <td><%= link_to 'Destroy', health, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Health', new_health_path %>
