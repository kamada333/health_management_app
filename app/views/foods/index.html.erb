<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>写真</th>
      <th>日付</th>
      <th>タイトル</th>
      <th>コメント</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @foods.each do |food| %>
    <tbody class="box">
      <tr>
        <td><img src="<%=food.image %>" style="wight:300px; height:200px;"></td>
        <td class="p400"><%= food.date %></td>
        <td class="p400"><%= food.title %></td>
        <td class="p400"><%= food.comment %></td>
        <td><%= link_to '詳細', food ,class: "btn btn-outline-warning btn-sm"%></td>
        <td><%= link_to '編集', edit_food_path(food),class: "btn btn-outline-success btn-sm" %></td>
        <td><%= link_to '削除', food, method: :delete, data: { confirm: '本当に削除しますか？' } ,class: "btn btn-outline-danger btn-sm"%></td>
      </tr>
    </tbody>
  <% end %>
</table>
<br>

<%= link_to '新規作成', new_food_path ,class: "btn btn-outline-primary"%>
